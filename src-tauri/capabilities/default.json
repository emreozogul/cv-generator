{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-create",
    "fs:allow-exists",
    "fs:scope",
    "shell:allow-open",
    "dialog:allow-save",
    {
      "identifier": "fs:scope",
      "allow": [
        "$DOWNLOAD/*",
        "$DOCUMENT/*"
      ]
    },
    "dialog:default"
  ]
}